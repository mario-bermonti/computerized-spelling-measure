<SpellingActivityScreen>:
  BoxLayout:
    orientation: "vertical"
    TextInput:
      id: response_input
      multiline: False
      disabled: True
      #size_hint: .9,.1
      #pos_hint: {"center_x": .5, "top": .8}
        ThemedButton
            text: "Seguir"
            on_press:
                root.submit(response_input.text)
